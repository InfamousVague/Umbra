{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Umbra",
  "version": "1.2.0",
  "identifier": "com.umbra.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "node scripts/postinstall.js && npx expo start --web --port 8081",
    "beforeBuildCommand": "node scripts/postinstall.js && npx expo export --platform web"
  },
  "app": {
    "windows": [
      {
        "title": "Umbra",
        "width": 420,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/InfamousVague/Umbra/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
