+      {rows.length === 0 ? (
+        <Text style={labelStyle}>Collecting data...</Text>
+      ) : (
+        rows.map((row) => (
+          <View key={row.label} style={rowStyle}>
+            <Text style={labelStyle}>{row.label}</Text>
+            <Text style={valueStyle}>{row.value}</Text>
+          </View>
+        ))
+      )}
+    </View>
+  );
+});
+
