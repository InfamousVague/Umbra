+function resolveSourceLabel(perm: ComputedPermission): string {
+  switch (perm.source) {
+    case 'role':
+      return perm.sourceName ?? 'Role';
+    case 'channel-override':
+      return perm.sourceName ?? 'Channel Override';
+    case 'administrator':
+      return 'Administrator';
