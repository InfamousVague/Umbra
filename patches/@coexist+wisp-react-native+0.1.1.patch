+          <Text style={titleTextStyle}>{title}</Text>
+          {onClose && (
+            <Pressable onPress={onClose} accessibilityRole="button">
+              <Text style={{ color: panelColors.labelText, fontSize: defaultTypography.sizes.sm.fontSize }}>
+                Close
+              </Text>
+            </Pressable>
