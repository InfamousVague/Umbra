+  general: 'General Permissions',
+  text: 'Text Channel Permissions',
+  voice: 'Voice Channel Permissions',
+  management: 'Management Permissions',
+};
+
+// ---------------------------------------------------------------------------
+// Types
+// ---------------------------------------------------------------------------
+
+export interface Permission {
+  id: string;
+  name: string;
+  description: string;
+  category: 'general' | 'text' | 'voice' | 'management';
+  dangerous?: boolean;
