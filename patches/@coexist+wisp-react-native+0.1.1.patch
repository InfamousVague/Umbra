+  function VanityURLSettings(
+    {
+      currentSlug = '',
+      baseUrl = 'umbra.app/c/',
+      onChange,
+      onCheck,
+      onSave,
+      availability,
+      saving = false,
+      style: userStyle,
+      ...rest
