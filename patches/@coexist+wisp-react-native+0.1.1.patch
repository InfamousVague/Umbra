+      return (
+        <Pressable onPress={onToggle} accessibilityLabel="Show call stats">
+          <View style={{ backgroundColor: bgColor, borderRadius: 6, padding: 6 }}>
+            <Text style={titleStyle}>Stats</Text>
+          </View>
+        </Pressable>
+      );
+    }
+    return null;
+  }
+
+  return (
+    <View ref={ref} style={[containerStyle, userStyle]}>
