+
+        {/* Blocked */}
+        {sectionTitle('Blocked Types')}
+        {blockedTypes.length === 0 ? (
+          <RNText style={{ fontSize: defaultTypography.sizes.xs.fontSize, color: tc.text.muted, padding: defaultSpacing.sm } as TextStyle}>
