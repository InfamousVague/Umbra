+                <View style={{ width: 10, height: 10, borderRadius: 5, backgroundColor: bar.color }} />
+                <Text style={{ fontSize: 12, color: theme.colors.text.secondary }}>{bar.label}</Text>
+              </View>
+            ))}
+          </View>
+        )}
+      </View>
+    );
+  },
+);
