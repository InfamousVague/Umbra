+          <View style={{ flexDirection: 'row', gap: 8, flexShrink: 0 }}>
+            {actions.map((action) => (
+              <Pressable
+                key={action.id}
+                onPress={action.onPress}
+                accessibilityLabel={action.label}
+                style={actionBtnStyle}
+              >
+                {action.icon}
+              </Pressable>
+            ))}
+          </View>
+        )}
+      </Pressable>
+    );
+  },
+);
+
+FriendListItem.displayName = 'FriendListItem';
