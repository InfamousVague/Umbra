+            borderRadius: theme.radii.lg,
+            backgroundColor: theme.colors.border.subtle,
+          }, userStyle]}
+          {...rest}
+        />
+      );
+    }
+
+    const resolvedBars = bars.map((bar, i) => ({
+      ...bar,
+      color: bar.color || getDefaultBarColor(i),
+      percent: bar.totalBytes > 0 ? (bar.usedBytes / bar.totalBytes) * 100 : 0,
+    }));
+
+    return (
+      <View
