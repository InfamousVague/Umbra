+      flexDirection: 'row',
+      alignItems: 'center',
+      gap: defaultSpacing.md,
+      paddingVertical: defaultSpacing.sm,
+      paddingHorizontal: defaultSpacing.md,
+      borderRadius: flat ? 0 : defaultRadii.md,
+      backgroundColor: colors.bg,
