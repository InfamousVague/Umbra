+            <View style={{ width: 36, height: 36, borderRadius: 18, backgroundColor: theme.colors.border.subtle }} />
+            <View style={{ width: 36, height: 36, borderRadius: 18, backgroundColor: theme.colors.border.subtle }} />
+          </View>
+        </View>
+      );
+    }
