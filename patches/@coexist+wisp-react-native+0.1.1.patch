+  emptyMessage?: string;
+  /** Whether the picker is disabled. @default false */
+  disabled?: boolean;
+  /** Show loading skeleton. @default false */
+  skeleton?: boolean;
+  /** Max height for the scrollable list. @default 240 */
+  maxHeight?: number;
+}
