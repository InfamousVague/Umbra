+      filename,
+      direction,
+      state,
+      steps,
+      progress,
+      bytesTransferred,
+      totalBytes,
+      speedBps,
+      peerName,
+      onPause,
+      onResume,
+      onCancel,
+      onRetry,
+      compact = false,
+      skeleton = false,
+      style: userStyle,
+    },
+    ref,
